{
  "rules": {
    "callable-types": true,
    "class-name": true,
    "curly": true,
    "eofline": true,
    "forin": true,
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-over-type-literal": true,
    "label-position": true,
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "max-line-length": [
      true,
      200
    ],
    "member-access": false,
    "no-arg": true,
    "no-bitwise": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-empty-interface": false,
    "no-eval": true,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-unused-variable": true, // Yes, this is deprecated, but the compiler checks that are supposed to cover the same issues don't cover them fully.
    // "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "prefer-const": true,
    "quotemark": [
      true,
      "single",
      "avoid-template",
      "avoid-escape"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "ban-comma-operator": true,
    "no-unnecessary-type-assertion": true,
    "prefer-for-of": true,
    "no-duplicate-switch-case": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-this-assignment": true,
    "no-unsafe-finally": true,
    "restrict-plus-operands": false,
    "use-default-type-parameter": true,
    "cyclomatic-complexity": [
      true,
      10
    ],
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "array-type": [
      true,
      "array"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "arrow-return-shorthand": [
      false,
      "multiline"
    ],
    "no-irregular-whitespace": true,
    "no-unnecessary-qualifier": true,
    "number-literal-format": true,
    "object-literal-shorthand": true,
    "prefer-template": [true, "allow-single-concat"],
    "no-consecutive-blank-lines": true
  },
  "linterOptions": {
    "exclude": [
      "src/polyfills.ts"
    ]
  }
}
